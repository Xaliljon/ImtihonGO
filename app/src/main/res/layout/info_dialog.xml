<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#ffffff"
        android:elevation="7dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1"
       >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/logo1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/latobold"
                    android:text="ImtihonGO"
                    android:textColor="#3A47BA"
                    android:textSize="20sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:text="Dastur haqida."
            android:fontFamily="@font/latobold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:fontFamily="@font/latobold"
                android:text="Ushbu dastur Davlat test markazining rasmiy saytidagi ma'lumotlarga asosan tayyorlandi. Dastur Toshkent axborot texnalogiyalar universiteti talabalari tomonidan yaratildi."/>



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:fontFamily="@font/latobold"
        android:textColor="#000"
        android:layout_marginBottom="60dp"

        android:text="Loyiha muallifi: G'ulom Nazarov \nDasturchi: Baxtiyorov Xaliljon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />



</RelativeLayout>